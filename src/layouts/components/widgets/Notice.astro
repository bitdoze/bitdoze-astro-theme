---
interface Props {
  type?: 'info' | 'success' | 'warning' | 'error';
  title?: string;
}

const { type = 'info', title } = Astro.props;

const styles = {
  info: { bg: 'bg-blue-50 dark:bg-blue-900/30 border-blue-400', text: 'text-blue-800 dark:text-blue-200', icon: 'M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z' },
  success: { bg: 'bg-green-50 dark:bg-green-900/30 border-green-400', text: 'text-green-800 dark:text-green-200', icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z' },
  warning: { bg: 'bg-yellow-50 dark:bg-yellow-900/30 border-yellow-400', text: 'text-yellow-800 dark:text-yellow-200', icon: 'M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z' },
  error: { bg: 'bg-red-50 dark:bg-red-900/30 border-red-400', text: 'text-red-800 dark:text-red-200', icon: 'M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z' }
};

const s = styles[type];
---

<div class={`not-prose p-4 mb-4 rounded-lg border-l-4 ${s.bg}`}>
  <div class={`flex items-start gap-3 ${s.text}`}>
    <svg class="w-5 h-5 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
      <path stroke-linecap="round" stroke-linejoin="round" d={s.icon}/>
    </svg>
    <div>
      {title && <p class="font-semibold mb-1">{title}</p>}
      <div class="prose dark:prose-invert max-w-none [&>p]:m-0">
        <slot />
      </div>
    </div>
  </div>
</div>
